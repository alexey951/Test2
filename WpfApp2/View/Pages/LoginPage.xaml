<Page x:Class="WpfApp2.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txbLogin"/>
            <TextBlock Text="Пароль:"/>
            <TextBox x:Name="txbPass"/>
            <Button x:Name="btnLogin" Content="Войти"/>
            <Button x:Name="btnReg" Content="Регестрация"/>
        </StackPanel>
    </Grid>
</Page>
